@model List<dükkan.Models.Kategori>
@{
    Layout = "~/Views/Shared/layout.cshtml";
    ViewBag.Title = "Home Page";
}

<form action="/admin/takiEkle" method="post" enctype="multipart/form-data">
    <input type="text" name="ad" value="" />
    <input type="text" name="ozellik" value="" />
    <select name="kategoriId">
        @foreach (var item in Model)
        {
            <option value="@item.id">@item.kategoriAdi</option>
        }

    </select>
    <input type="text" name="fiyat" />
    <input type="file" name="file1" />
    <input type="file" name="file2" />


    <input type="submit" name="name" value="gönder" />
</form>


