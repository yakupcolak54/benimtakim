@model dükkan.Models.Taki
@{
    Layout = "~/Views/Shared/layout.cshtml";
    ViewBag.Title = "Home Page";
}

<div class="container-lg container-fluid">
    <div class="row">
        <!--resim1:Model.file1 resim2:Model.file2-->
        <div class="col-lg-6 col12">
            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="@Model.file1" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="@Model.file1" alt="Second slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <div class="col-lg-6 col12 d-flex flex-column justify-content-center">
            <div class="col-12">
                <p style="font-size:36.5px;text-align:center" class="col-12"><b>@Model.takiAdi</b></p>
                <div style="font-size:23px;margin-bottom:30px; padding-left:32px;border:solid 1px black;margin-left:15px;border-radius:10px;color:darkorange;background-color:aliceblue" class="col-3">@Model.fiyat ₺</div>
                <p style="font-size:18px;">@Model.ozellikler</p>
            </div>
            <div class="col-12 justify-content-between">
                <button style="width: 100%;border:solid 1px black; background-color: #4dc247;font-size:20px;border-radius:10px;color:white;" onclick="sayfa_ac()"><img style="width:1.9rem;float:left;" src="~/icons/whatsapp.png" alt="Alternate Text" /><p style="float:left"></p>WhatsApp 'tan satın al</button>
            </div>
        </div>
    </div>
</div>
